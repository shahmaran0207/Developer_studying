package com.itbank.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

import com.itbank.model.vo.AccountVO;
import com.itbank.service.EX02Service;

@Controller
public class Ex02Controller {
	private EX02Service es;
	
	@GetMapping("/ex02")
	public void ex02() {}
	
	@PostMapping("/ex02")
	public ModelAndView ex02(AccountVO input) {
		es=new EX02Service();
		System.out.println(es); //해시코드가 다르다 = 인스턴스가 다르다 ==> 그때그때 객체를 생성 -> 메모리 효율 저하
		System.out.println(input.getUserid());
		System.out.println(input.getUserpw());
		
		return null;
	}
}
