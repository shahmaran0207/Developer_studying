	@Autowired
	private TestService ts;
	
	@Test
	public void run1() {
//		System.out.println("ts");
//		System.out.println(ts.total(10));
		
		assertNotNull(ts);
		assertEquals("서비스 테스트",  55, ts.total(10));
	}
}